    function handleToggleAutoMode() {
        var toggleIcon = document.getElementById("toggle-icon");
        if (toggleIcon.classList.contains("fa-toggle-off")) {
            toggleIcon.classList.remove("fa-toggle-off");
            toggleIcon.classList.add("fa-toggle-on");
        } else {
            toggleIcon.classList.remove("fa-toggle-on");
            toggleIcon.classList.add("fa-toggle-off");
        }

        const btnAutoOn = document.getElementById('btn-toggle-auto-mode');
        const isOnAuto = btnAutoOn.classList.contains('on');
        socket.emit('auto', { status: isOnAuto ? 'off' : 'on' });

        localStorage.setItem("autoModeState", isOnAuto ? "off" : "on");
    }

    function setAutoModeButtonState() {
        const autoModeState = localStorage.getItem("autoModeState");
        const toggleIcon = document.getElementById("toggle-icon");
        const btnAutoOn = document.getElementById("btn-toggle-auto-mode");

        if (autoModeState === "on") {
            toggleIcon.classList.remove("fa-toggle-off");
            toggleIcon.classList.add("fa-toggle-on");
            btnAutoOn.classList.add("on");
        } else {
            toggleIcon.classList.remove("fa-toggle-on");
            toggleIcon.classList.add("fa-toggle-off");
            btnAutoOn.classList.remove("on");
        }
    }

    function updateFoodValue() {
        const foodRange = document.getElementById('foodRange');
