    document.getElementById("submitTime").addEventListener("click", function () {
        const hour1 = document.getElementById("hour").value;
        const minute1 = document.getElementById("minute").value;
        const hour2 = document.querySelectorAll("#hour")[1].value;
        const minute2 = document.querySelectorAll("#minute")[1].value;
        const foodValue = document.getElementById("foodRange").value;

        const timeData = {
            time1: { hour: hour1, minute: minute1 },
            time2: { hour: hour2, minute: minute2 },
            foodValue: foodValue,
        };

        // Gửi dữ liệu đến máy chủ Node.js
        fetch("/update-time", {
            method: "POST",
            headers: {
            "Content-Type": "application/json",
            },
            body: JSON.stringify(timeData),
        });
        localStorage.setItem("timeData", JSON.stringify(timeData));
    });

    function restoreTimeData() {
        const savedTimeData = localStorage.getItem("timeData");
        if (savedTimeData) {
            const timeData = JSON.parse(savedTimeData);
            document.getElementById("hour").value = timeData.time1.hour;
            document.getElementById("minute").value = timeData.time1.minute;
            document.querySelectorAll("#hour")[1].value = timeData.time2.hour;
            document.querySelectorAll("#minute")[1].value = timeData.time2.minute;
        }
    }

    window.addEventListener('load', function() {
        setAutoModeButtonState();
        setButtonStates();
        restoreTimeData();

        const lux = localStorage.getItem('lux');    
